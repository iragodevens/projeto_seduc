
.limited-description {
    max-height: 50px; /* Altura máxima da descrição */
    overflow: hidden; /* Esconde o texto que excede */
    text-overflow: ellipsis; /* Adiciona '...' se o texto for cortado */
    display: -webkit-box; /* Para o efeito de truncamento */
    -webkit-box-orient: horizontal; /* Orienta em colunas */
    -webkit-line-clamp: 2; /* Limita a duas linhas */
}
.card {
    margin: 0,12px; /* Adiciona margem entre os cards */
    border: 2px solid #007bff; /* Define uma borda azul */
    border-radius: 4px; /* Arredonda os cantos da borda */
    transition: transform 0.2s; /* Transição suave para o efeito de hover */
}

.card:hover {
    transform: scale(1.05); /* Aumenta o tamanho do card ao passar o mouse */
}

body {
    background-color: #d1e7dd; /* Cor equivalente ao bg-success-subtle */
}
